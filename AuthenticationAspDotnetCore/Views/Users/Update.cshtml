@model AuthenticationAspDotnetCore.ViewModels.UserVM

@{
    Layout = "_Layout";
  
}

<h1>Update User</h1>
<form method="post">
    <input asp-for="ApplicationUser.Id" class="form-control" hidden>
    <div class="mb-3">
        <label asp-for="ApplicationUser.FullName" class="form-label"></label>
        <input asp-for="ApplicationUser.FullName" class="form-control">
        <span asp-validation-for="ApplicationUser.FullName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ApplicationUser.DateOfBirth" class="form-label"></label>
        <input asp-for="ApplicationUser.DateOfBirth" class="form-control">
        <span asp-validation-for="ApplicationUser.DateOfBirth" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ApplicationUser.CredentialId" class="form-label"></label>
        <input asp-for="ApplicationUser.CredentialId" class="form-control">
        <span asp-validation-for="ApplicationUser.CredentialId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ApplicationUser.HealthCareId" class="form-label"></label>
        <input asp-for="ApplicationUser.HealthCareId" class="form-control">
        <span asp-validation-for="ApplicationUser.HealthCareId" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label class="form-label" asp-for="Role"></label>
        @Html.DropDownListFor(m=> m.Role, Model.RoleList, "-Please select role", new{@class = "form-control"})
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>